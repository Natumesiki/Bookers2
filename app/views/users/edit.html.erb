<h1>User Edit</h1>

    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>User info</h1>

<%#if @user.errors.any? %>
　<%#= @user.errors.count %>件のエラーが発生しました
<ul>
   <%# @user.errors.full_messages.each do |message| %>
  <li><%#= message %></li>
  <%#end%>
 </ul>
<%#send%>
<%= form_with model: @user,url:user_path, method: :patch do |f| %>
 <div class="form-group">
 <label for="inputName">Name</label></br>
  <%= f.text_field :name, autofocus: true, maxlength:"20",id:"inputName",placeholder:"名前", class:"form-control name"%></br>

 <div class="form-group">
 <label for="inputImage">ProfileImage</label></br>
 <%= f.file_field :profile_image,placeholder:"プロフィール画像", accept: "image/*",class:"form-control-file user_image" %></br>

 <div class="form-group">
 <label for="user_introduction">Introduction</label></br>
  <%= f.text_area :introduction, maxlength:"50" ,class:"form-control introduction" %></br>

 <div class="form-group">
 <%= f.submit 'Update User', class:"btn btn-secondary"%>
 </div>
<%end%>

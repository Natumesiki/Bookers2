
<h2 class="mt-3">New book</h2>

 <%#= render "devise/shared/error_messages", resource: @book_list %>

<%#= form_with model: @book_list, url:book_path(@book_list.id), method: :post do |f| %>
<%= form_with model: book do |f| %>

  <div class="form-group">

  <label for="book_title">Title</label></br>
   <%= f.text_field :title , class:"form-control"%>
  </div>

  <div class="form-group">
  <label for="book_opinion">Opinion</label></br>
   <%= f.text_area :body, class:"form-control book_body"%><br/>
   </div>

  <div class="form-group">
  <%= f.submit 'Create Book', class:"btn btn-success" %>
  </div>
<% end %>
</div>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

  <h1>Editing Book</h1>

 <%= render "devise/shared/error_messages", resource: @book_up %>

 <%#= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
 <%= form_with model: @book_up do |f| %>
  <div class="form-group">
  <label for="book_title">Title</label></br>
      <%= f.text_field :title,class:"form-control book_title"%>
    </div>
  <div class="form-group">
  <label for="book_opinion">Opinion</label></br>
      <%= f.text_area :body ,class:"form-control book_body"%></br>
   </div>
  <div class="form-group">
    <%= f.submit 'Update Book',class:"btn btn-success" %>
  </div>
  <% end %>

   <tr>
   <td><%= link_to "Show", book_path(@book_up.id) , class:"book" %></td>
   |
   <tb><%= link_to "Back", books_path(@book_up.id) , class:"back"%></tb>
 </div>
 </div>

<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

 <main>
   <p id="notice"></p>
   <div class='container px-5 px-sm-0'>
    <div class='row'>
    <div class="col-md-3">
 <%= render 'users/register', user: @user%>

 <%= render 'books/new',book:@book %>
</div>

<div class ='col-md-8 offset-md-1'>
 <h2>Books</h2>
<table class='table table-hover table-inverse'>
 <thead>

 <tr>
  <th>Title</th>
  <th>Opinion</th>
<th colspan="3"></th>
 </tr>
 </thead>
<tb><%#= image_tag @user.get_profile_image(100,100) %></tb>
<% @books.each do |book|%>
<tbody>
 <tr>
<div>
  <%#= link_to book_path(book.id) do %>
    <%#= image_tag book.get_image %>
  <%# end %>

  <td><%= book.title %></td>
  <td><%= book.body %></td>

   <td><%= link_to "show", book_path(book.id) %></td>

   <td><%= link_to "Edit", edit_book_path(book.id) %></td>

   <td><%= link_to "Destroy", book_path(book.id), method: :destroy,"data-confirm" => "本当に削除しますか?" %></td>

 </tr>

</tbody>
<%end%>
</table>
 </div>
 </div>
 </div>
 </main>
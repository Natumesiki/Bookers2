<h2 class="mt-3">New book</h1>

<%= form_with model: @book,url: '/books/', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br/>

  <%= f.submit 'Create Book' %>
<% end %>

<table>
 <thead>

 <tr>
  <th>Title</th>
  <th>Opinion</th>
<th colspan="3"></th>
 </tr>
 </thead>

<tbody>
<% @book.each do |book|%>
 <tr>

  <td><%= book.title %></td>
  <td><%= book.body %></td>

   <td><%= link_to "show", book_path(book.id) %></td>

   <td><%= link_to "Edit", edit_book_path(book.id) %></td>

